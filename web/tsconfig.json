{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2020"
		],
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"outDir": "build/dist",
		"sourceMap": true,
		"declaration": true,
		"removeComments": true,
		"declarationDir": "build/dist",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": false,
		"isolatedModules": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}
